<!DOCTYPE html>
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Makale Web Projesi</title>
    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/shop-homepage.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</head>

<body>
    @{ 
        Kullanici kullanici = null;
        if(Session["login"]!=null)
        {
            kullanici =(Kullanici)Session["login"];
        }
    }
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Home/Index">Ana Sayfa</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @if (kullanici != null)
                    {           
   
                        <li class="dropdown">
                            <a href="/Not/Index" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-wrench"></span>Yönetim <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="/Not/Create">Not Ekle</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="/Not/Index">Notlarım</a></li>
                                <li><a href="/Not/Begendiklerim">Beğendiklerim</a></li>

                                @if (kullanici.Admin)
                                {
                                    <li role="separator" class="divider"></li>
                                    <li><a href="/Kategori/Create">Kategori Ekle</a></li>
                                    <li><a href="/Kategori/Index">Kategoriler</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="/Kullanici/Create">Kullanıcı Ekle</a></li>
                                    <li><a href="/Kullanici/Index">Kullanıcılar</a></li>
                                }

                            </ul>
                        </li>
                    }

                    <li>
                        <a href="/Home/Begenilenler"><span class="glyphicon glyphicon-star"></span>En Beğenilenler</a>
                    </li>
                    <li>
                        <a href="/Home/Index"><span class="glyphicon glyphicon-list"></span>Son Yazılanlar</a>
                    </li>
                    <li>
                        <a href="/Home/About"><span class="glyphicon glyphicon-info-sign"></span>Hakkımızda</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">

                    @if (kullanici == null)
                    {
                        <li>
                            <a href="/Home/Login">
                                <span class="glyphicon glyphicon-log-in">Giriş</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Home/KayitOl">
                                <span class="glyphicon glyphicon-user">Üye Ol</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="/Home/ProfilGoster">
                                <span class="glyphicon glyphicon-user">@kullanici.KullaniciAdi</span>
                            </a>
                        </li>
                        <li>
                            <a href="/Home/Logout">
                                <span class="glyphicon glyphicon-log-out">Çıkış</span>
                            </a>
                        </li>

                    }


                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Page Content -->
    @RenderBody()
    <!-- /.container -->

   @RenderSection("footer",false)
    <!-- /.container -->


</body>

</html>
